@{
    Layout = null;
    var userEmail = Session["UserName"]?.ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <style>
        .sidebar {
            border-right: 1px solid #dee2e6;
            font-size: 16px;
            margin: 0;
            padding-left: 0;
            padding-right: 0;
        }

        .sidebar-sticky {
            padding-top: 10px;
            background-color: transparent;
            border-right: 1px solid #dee2e6;
            height: 100vh;
        }

        .nav-link {
            border-bottom: 1px solid #dee2e6;
            color: #343a40;
            font-size: 18px;
        }

        .dropdown-toggle {
            border: none;
        }

        .navbar {
            border-bottom: 1px solid #dee2e6;
            background-color: transparent;
            font-size: 18px;
            margin: 0;
        }

        .dropdown-item {
            color: #343a40;
        }

        .dropdown-menu {
            border: none;
        }

        .profile-nav {
            padding-left: 0;
            border-bottom: none !important;
        }

        .nav-item {
            border: none;
        }

        #rowrprt {
            padding-left: 0;
        }

        .dropdown-menu-right {
            right: 0;
            left: auto;
        }

        .profile-nav {
            margin-left: auto;
        }

        .sidebar-logo {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-bottom: 1px solid #dee2e6;
        }

            .sidebar-logo img {
                max-width: 50%;
                height: auto;
            }

        .navbar-nav {
            margin-left: auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <div class="sidebar-logo">
                        <img src="~/Images/ışıklogo.png" alt="Logo">
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminHomePage", "Admin")"><i class="fas fa-home " style="margin-right:5px;"></i>Home Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminPage", "Admin")"><i class="fas fa-users-cog " style="margin-right:5px;"></i>Manage Users</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-10 ml-auto px-0">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown profile-nav">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @userEmail
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("Logout", "User")">Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
