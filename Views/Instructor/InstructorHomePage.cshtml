

@{
    ViewBag.Title = "Instructor Home Page";
    Layout = "~/Views/Shared/InstructorLayout.cshtml";
    var instructorName = ViewBag.InstructorName;
    var projectDescription = ViewBag.ProjectDescription;
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" style="padding-bottom: 10px; padding-top: 20px;">
            <h2 style="color: black; font-size: 25px;">Welcome, @instructorName!</h2>
        </div>
        <div class="col-md-12" style="padding-bottom: 20px;">
            <p style="font-size: 18px;">@projectDescription</p>
        </div>
    </div>
    <div class="row text-center" style="border: thin solid #ddd; border-radius: 10px; overflow: hidden; padding: 20px;">
        <div class="col-md-4">
            <a href="@Url.Action("InstructorPage", "Instructor")" style="text-decoration: none; color: inherit;">
                <i class="fas fa-file-medical fa-3x" style="color: #007bff;"></i>
                <h4 style="color: #007bff">Manage Medical Reports</h4>
                <p>Review and update the status of medical reports.</p>
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("EpidemicControl", "Instructor")" style="text-decoration: none; color: inherit;">
                <i class="fas fa-virus fa-3x" style="color: #007bff;"></i>
                <h4 style="color: #007bff">Epidemic Control</h4>
                <p>Monitor and manage epidemic control measures.</p>
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("CourseStatusRequests", "Instructor")" style="text-decoration: none; color: inherit;">
                <i class="fas fa-book fa-3x" style="color: #007bff;"></i>
                <h4 style="color: #007bff">Course Status Requests</h4>
                <p>Handle requests for course status changes.</p>
            </a>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
}
